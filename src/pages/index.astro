---
const {
  title = "TriAxis Resources",
  description = "South African commodities trading, logistics coordination, and long-term supply partnerships.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <style>
      :root{
        --bg:#070a12;
        --panel: rgba(255,255,255,.06);
        --panel2: rgba(255,255,255,.08);
        --line: rgba(255,255,255,.14);
        --text: rgba(255,255,255,.92);
        --muted: rgba(255,255,255,.70);
        --max: 1120px;
      }
      *{ box-sizing:border-box; }
      html,body{ height:100%; }
      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Apple Color Emoji","Segoe UI Emoji";
        color: var(--text);
        background:
          radial-gradient(900px 500px at 20% 0%, rgba(0,140,255,.22), transparent 60%),
          radial-gradient(700px 600px at 100% 10%, rgba(0,255,200,.14), transparent 55%),
          linear-gradient(180deg, #060814, #05060c 60%, #04040a);
      }
      a{ color:inherit; text-decoration:none; }
      a:hover{ text-decoration:underline; }

      .wrap{ max-width: var(--max); margin:0 auto; padding: 28px 18px 60px; }
      .topbar{
        display:flex; align-items:center; justify-content:space-between;
        gap:12px;
        border:1px solid var(--line);
        background: var(--panel);
        backdrop-filter: blur(10px);
        border-radius: 14px;
        padding: 12px 14px;
      }
      .brand{ display:flex; align-items:center; gap:12px; min-width: 180px; }
      .brand img{ width: 38px; height: 38px; object-fit: contain; }
      .brand b{ letter-spacing:.2px; }
      .nav{
        display:flex; flex-wrap:wrap; gap:10px;
        justify-content:flex-end;
      }
      .nav a{
        padding: 8px 10px;
        border: 1px solid transparent;
        border-radius: 10px;
        color: var(--muted);
        background: transparent;
      }
      .nav a:hover{
        border-color: var(--line);
        background: rgba(255,255,255,.04);
        color: var(--text);
        text-decoration:none;
      }

      main{ margin-top: 18px; }

      .panel{
        border:1px solid var(--line);
        background: var(--panel);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        padding: 18px;
      }

      .grid{
        display:grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 14px;
      }
      .col-12{ grid-column: span 12; }
      .col-6{ grid-column: span 6; }
      .col-4{ grid-column: span 4; }
      @media (max-width: 860px){
        .col-6,.col-4{ grid-column: span 12; }
        .brand span{ display:none; } /* keeps header neat on mobile */
      }

      .card{
        border:1px solid var(--line);
        background: var(--panel2);
        border-radius: 14px;
        padding: 16px;
      }
      .card h3{ margin:0 0 6px; }
      .card p{ margin:0; color: var(--muted); line-height: 1.55; }

      .muted{ color: var(--muted); }
      .btn{
        display:inline-block;
        border:1px solid var(--line);
        background: rgba(255,255,255,.05);
        padding: 10px 12px;
        border-radius: 12px;
      }
      .btn:hover{ background: rgba(255,255,255,.08); text-decoration:none; }
      footer{ margin-top: 18px; color: var(--muted); font-size: 13px; }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="topbar">
        <a class="brand" href="/">
          <img src="/logo.png" alt="TriAxis Resources logo" />
          <div>
            <b>TriAxis Resources</b>
            <div class="muted" style="font-size:12px;">Commodities • Logistics • Supply</div>
          </div>
        </a>

        <nav class="nav">
          <a href="/commodities">Commodities</a>
          <a href="/logistics">Logistics</a>
          <a href="/contact">Contact</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer>
        © {new Date().getFullYear()} TriAxis Resources. All rights reserved.
      </footer>
    </div>
  </body>
</html>